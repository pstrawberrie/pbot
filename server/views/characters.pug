extends layouts/default

block content
    if characters
      .section.p-1.justify-center
        h4 All Characters
      .section.pad-2.space-between.cards-wrap
        each character in characters
          a(href=`/character/${character.name}`).card.rounded.bg-white
            .card__header
              h5= character.name
            .card__body
              p Stats: #{h.statsString(character.stats)}
              p Location: #{character.location}
              p Items: #{h.arrCommaJoin(character.items)}
              p Skills: #{h.arrCommaJoin(character.skills)}
              
    else
      .section.p-3.justify-center.flex-column
        h1 Something's weird...
            
